<Window x:Class="ListP.Movement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ListP"
        mc:Ignorable="d"
        Title="Movement" Height="450" Width="800">
    <Grid>
        <ComboBox x:Name="MovComboBox" HorizontalAlignment="Left"
                  Height="22" Margin="638,22,0,0"
                  SelectionChanged="ColorComboBox_SelectionChanged" 
                  VerticalAlignment="Top" Width="119"
                  >
            <ComboBoxItem Content="Белый"/>
            <ComboBoxItem Content="Красный"/>
            <ComboBoxItem Content="Черный"/>
            <ComboBoxItem Content="Зеленый"/>
        </ComboBox>
        <Button Content="Button" HorizontalAlignment="Left" Margin="678,69,0,0" VerticalAlignment="Top" Click="Click_Mov"/>
        <Label Content="Ваша стартовая черта:" HorizontalAlignment="Left" Height="26" Margin="74,48,0,0" VerticalAlignment="Top" Width="193"/>
        <Label Content="Label" HorizontalAlignment="Left" Height="30" Margin="74,79,0,0" VerticalAlignment="Top" Width="146"/>
        <Label Content="Выберите идеал:" HorizontalAlignment="Left" Height="32" Margin="74,154,0,0" VerticalAlignment="Top" Width="175"/>
        <Label Content="Label" HorizontalAlignment="Left" Height="30" Margin="74,109,0,0" VerticalAlignment="Top" Width="146"/>
        <DataGrid x:Name="dataGridIdeal"
                  ItemsSource= "{Binding Ideal}"  
                  SelectedItem="{Binding SelectedProduct}"
                  Margin="0,186,0,0" 
                 
                  AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" IsReadOnly="True"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" IsReadOnly="True"/>
                <DataGridTextColumn Header="Mov_1" Binding="{Binding Mov_1}" IsReadOnly="True"/>
                <DataGridTextColumn Header="Mov_2" Binding="{Binding Mov_2}" IsReadOnly="True"/>
                <DataGridTextColumn Header="Desc" Binding="{Binding Desc}" IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
