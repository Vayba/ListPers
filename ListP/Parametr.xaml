<Window x:Class="ListP.Parametr"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ListP"
        mc:Ignorable="d"
        Closing="Window_Closing" 
        Title="Parametr" Height="450" Width="800">
    <Grid Margin="0,0,0,-6">
        <Label x:Name="AvailablePointsLabel" Content="Очки: " Margin="362,10,344,379"/>
        <StackPanel Orientation="Horizontal" Margin="48,55,586,317">
            <Label Content="Сила" Margin="0,0,0,0"/>
                <Button Click="StrengMin" Content="-" Margin="0,0,0,0"/>
                <TextBox x:Name="StrengthTextBox" TextWrapping="Wrap" Text="0" Width="50" IsReadOnly="True" Margin="0,0,0,0"/>
                <Button Click="StrengPlus" Content="+" Margin="0,0,0,0"/>
        </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="582,245,73,133">
                <Label Content="Хар." Margin="0,0,0,0"/>
            <Button Click="ChaMin" Content="-" Margin="0,0,0,0"/>
            <TextBox x:Name="CharTextBox" TextWrapping="Wrap" Text="0" IsReadOnly="True" Width="50" Margin="0,0,0,0"/>
            <Button Click="ChaPlus" Content="+" Margin="0,0,0,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="48,344,607,23">
                <Label Content="Ловк" Margin="0,0,0,0"/>
            <Button Click="DexMin" Content="-" Margin="0,0,0,0"/>
            <TextBox x:Name="DexTextBox" TextWrapping="Wrap" Text="0" IsReadOnly="True" Width="50" Margin="0,0,0,0"/>
            <Button Click="DexPlus" Content="+" Margin="0,0,0,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="48,189,586,178">
                <Label Content="Тело" Margin="0,0,0,0"/>
            <Button Click="ConMin" Content="-" Margin="0,0,0,0"/>
            <TextBox x:Name="WoundTextBox" TextWrapping="Wrap" Text="0" Width="50" Margin="0,0,0,0" IsReadOnly="True"/>
            <Button Click="ConPlus" Content="+" Margin="0,0,0,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="582,117,62,257">
                <Label Content="Смек" Margin="0,0,0,0"/>
                <Button Click="IntMin"  Content="-" Margin="0,0,0,0"/>
            <TextBox x:Name="IntTextBox" TextWrapping="Wrap" Text="0" IsReadOnly="True" Width="50"/>
            <Button Click="IntPlus" Content="+" Margin="0,0,0,0"/>
            </StackPanel>
        <Button x:Name="SaveButton" Click="Save" Content="Сохранить" Margin="343,185,356,204"/>

    </Grid>
</Window>
